# ============================================
# RAILWAY ENVIRONMENT VARIABLES (Memory Constrained)
# ============================================

# LLM Provider
LLM_PROVIDER=groq

# Groq API
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TEMPERATURE=0.3
GROQ_MAX_TOKENS=2048

# Gemini API (Fallback)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Supabase (Optional)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# CORS (Railway URL - UPDATE THIS!)
ALLOWED_ORIGINS=https://your-railway-frontend.up.railway.app,http://localhost:3000

# ============================================
# RAILWAY OPTIMIZATION (Prevent OOM)
# ============================================

# Environment
ENVIRONMENT=production
LOG_LEVEL=ERROR
RAILWAY_ENVIRONMENT=true

# REDUCED Batch Sizes for Railway Free Tier (512MB RAM)
BULK_UPLOAD_BATCH_SIZE=3
EMBEDDING_BATCH_SIZE=1

# HTTP/2 (Reduced for Railway)
HTTPX_HTTP2=1
HTTPX_MAX_CONNECTIONS=100
HTTPX_MAX_KEEPALIVE=20
HTTPX_KEEPALIVE_EXPIRY=60

# CPU Threads (Reduced for Railway)
OMP_NUM_THREADS=2
MKL_NUM_THREADS=2
OPENBLAS_NUM_THREADS=2
NUMEXPR_NUM_THREADS=2
TORCH_NUM_THREADS=2

# Disable verbose logging
TF_CPP_MIN_LOG_LEVEL=3
PYTHONWARNINGS=ignore

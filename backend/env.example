# ============================================
# DORA Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# Google OAuth Configuration (REQUIRED)
# ============================================
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================
# AI/LLM Configuration (REQUIRED)
# ============================================
# Primary LLM Provider: groq (recommended) or gemini
LLM_PROVIDER=groq

# Groq API Configuration (RECOMMENDED - Free & Fast)
# Get API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Gemini API Configuration (OPTIONAL - Alternative)
# Get API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# ============================================
# CORS Configuration (REQUIRED)
# ============================================
# For development
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# For production, add your domain:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Performance Configuration (OPTIONAL)
# ============================================
# BULK_UPLOAD_BATCH_SIZE: Number of files to FETCH in parallel (Network Bound)
# - 60 = OPTIMAL for most systems (needs 8GB+ RAM) - ~4-6 mins for 126 files
# - 30 = For limited RAM (4-8GB)
# - 100 = For high-end systems (16GB+ RAM)
BULK_UPLOAD_BATCH_SIZE=60

# EMBEDDING_BATCH_SIZE: Number of files to EMBED in parallel (CPU/GPU Bound)
# - 15 = OPTIMAL for CPU/GPU intensive operations (embedding + chunking)
# - 10 = For limited CPU (4 cores or less)
# - 20 = For high-end CPU (8+ cores)
# NOTE: This is different from internal embedding batch size (auto-adjusted)
EMBEDDING_BATCH_SIZE=15

# ============================================
# Logging Configuration (OPTIONAL)
# ============================================
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=WARNING

# ============================================
# Environment (OPTIONAL)
# ============================================
ENVIRONMENT=development

# ============================================
# Supabase Configuration (OPTIONAL - Not currently used)
# ============================================
# Uncomment if you want to use Supabase in the future
# SUPABASE_URL=your_supabase_url_here
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here